# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# file extensions with 2 indent
[*.{js,jsx,yml,yaml,tf,hcl,json,vim,html,css}]
indent_style = space
indent_size = 2

# file names with 2 indents
[{Vagrantfile,.vimrc]
indent_size = 2

# GO
[*.go]
indent_style = tab
indent_size = 4
