# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{groovy}]
indent_size = 4

# js, yaml, json, hashicorp
[*.{js,jsx,yml,yaml,tf,hcl,json}]
indent_size = 2

[Vagrantfile]
indent_size = 2

# GO
[*.go]
indent_size = 4
